<script>

$( "#clockwise" ).click(function(event) {


  $('#m_block1' ).css( "background-color", "orange");
  $('#m_block2' ).css( "background-color", "red");
  $('#m_block3' ).css( "background-color", "yellow");
  $('#m_block4' ).css( "background-color", "green");    
    
 
});

$( "#anti" ).click(function(event) {


  $('#m_block1' ).css( "background-color", "red");
  $('#m_block2' ).css( "background-color", "yellow");
  $('#m_block3' ).css( "background-color", "green");
  $('#m_block4' ).css( "background-color", "orange");
    
 
});

    

  

